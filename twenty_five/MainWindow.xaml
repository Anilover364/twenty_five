<Window x:Class="twenty_five.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:twenty_five"
        mc:Ignorable="d"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <GroupBox Background="DarkBlue" BorderThickness="0" Margin="-5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
        <Canvas  x:Name="lalala"  Grid.Row="0" Grid.RowSpan="2">
            
        </Canvas>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Viewbox Margin="20,20,20,20" Grid.Row="1" Grid.Column="1" >
                        
                
                    </Viewbox>
                </Grid>
                <Menu HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="21">
                    <MenuItem  x:Name="stars" Header="Звезды">
                        <MenuItem x:Name="Delete" Header="Удалить" ToolTip="Выключи её нахуй" Click="MenuClick" />
                        <MenuItem x:Name="Painte" Header="Покрасить" ToolTip="Звезды в цвет говна" Click="MenuClick">
                            <MenuItem.Icon>
                                <Rectangle x:Name="PainIco" Width="20" Height="20"  Stroke="Black" StrokeThickness="2"/>
                            </MenuItem.Icon>
                            </MenuItem>
                        <MenuItem x:Name="AddStar" Header="Ещё звёздочек" Click="MenuClick"/>
                    </MenuItem>
                </Menu>
            </Grid>            
        </GroupBox>
    </Grid>
</Window>
